{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "preloz_pwcheck",
            "command": "/usr/bin/clang",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c99",
                "-Wall",
                "-Wextra",
                "${workspaceFolder}/pwcheck.c",
                "-o",
                "${workspaceFolder}/pwcheck"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "kompilátor: /usr/bin/clang"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc sestavit aktivní soubor",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Úloha vygenerovaná ladicím programem"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc sestavit aktivní soubor ver(1)",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Úloha vygenerovaná ladicím programem"
        }
    ]
}